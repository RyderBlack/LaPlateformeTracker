<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.effect.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.tracky.controller.HomeController" spacing="0">
    <!-- Header -->
    <HBox style="-fx-background-color: #4CAF50; -fx-padding: 15 30;" alignment="CENTER_LEFT">
        <Text text="LaPlateforme" style="-fx-fill: white; -fx-font-size: 20; -fx-font-weight: bold;"/>
        <Region HBox.hgrow="ALWAYS"/>
        
        <HBox spacing="15" alignment="CENTER_RIGHT">
            <Label fx:id="welcomeLabel" text="Welcome, Admin" style="-fx-text-fill: white; -fx-font-weight: bold;"/>
            <Button fx:id="logoutButton" text="Logout" onAction="#handleLogout" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-border-color: white; -fx-border-radius: 4; -fx-padding: 5 15;"/>
        </HBox>
    </HBox>
    
    <!-- Main Content -->
    <VBox style="-fx-padding: 30; -fx-background-color: #f9f9f9;" spacing="20">
        <HBox spacing="20">
            <!-- Sidebar -->
            <VBox spacing="10" style="-fx-min-width: 200; -fx-padding: 20; -fx-background-color: white; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                <Label text="DASHBOARD" style="-fx-text-fill: #9e9e9e; -fx-font-size: 11; -fx-font-weight: bold;"/>
                <Button text="Overview" style="-fx-background-color: #e8f5e9; -fx-text-fill: #4CAF50; -fx-alignment: CENTER_LEFT; -fx-padding: 10 15; -fx-font-weight: bold;"/>
                
                <Label text="MANAGE" style="-fx-text-fill: #9e9e9e; -fx-font-size: 11; -fx-font-weight: bold; -fx-padding: 15 0 0 0;"/>
                <Button text="Users" style="-fx-background-color: transparent; -fx-text-fill: #333; -fx-alignment: CENTER_LEFT; -fx-padding: 10 15;"/>
                <Button text="Settings" style="-fx-background-color: transparent; -fx-text-fill: #333; -fx-alignment: CENTER_LEFT; -fx-padding: 10 15;"/>
            </VBox>
            
            <!-- Main Content Area -->
            <VBox spacing="20" style="-fx-padding: 20; -fx-background-color: white; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);" VBox.vgrow="ALWAYS">
                <Text text="Dashboard Overview" style="-fx-font-size: 24; -fx-font-weight: bold;"/>
                
                <!-- Stats Cards -->
                <HBox spacing="20" style="-fx-padding: 0 0 20 0;">
                    <VBox style="-fx-background-color: #e3f2fd; -fx-padding: 20; -fx-spacing: 10; -fx-pref-width: 200; -fx-pref-height: 120;">
                        <Text text="Total Users" style="-fx-fill: #1976D2; -fx-font-size: 14;"/>
                        <HBox alignment="CENTER_LEFT" spacing="5">
                            <Text text="1,234" style="-fx-font-size: 28; -fx-font-weight: bold;"/>
                            <Text text="+12%" style="-fx-fill: #4CAF50; -fx-font-weight: bold; -fx-padding: 3 6; -fx-background-color: #e8f5e9; -fx-background-radius: 10;"/>
                        </HBox>
                        <Text text="+123 this week" style="-fx-fill: #9e9e9e; -fx-font-size: 12;"/>
                    </VBox>
                    
                    <VBox style="-fx-background-color: #e8f5e9; -fx-padding: 20; -fx-spacing: 10; -fx-pref-width: 200; -fx-pref-height: 120;">
                        <Text text="Active Now" style="-fx-fill: #2E7D32; -fx-font-size: 14;"/>
                        <HBox alignment="CENTER_LEFT" spacing="5">
                            <Text text="87" style="-fx-font-size: 28; -fx-font-weight: bold;"/>
                            <Text text="+5%" style="-fx-fill: #4CAF50; -fx-font-weight: bold; -fx-padding: 3 6; -fx-background-color: #e8f5e9; -fx-background-radius: 10;"/>
                        </HBox>
                        <Text text="+12 this hour" style="-fx-fill: #9e9e9e; -fx-font-size: 12;"/>
                    </VBox>
                </HBox>
                
                <!-- Recent Activity -->
                <VBox spacing="10">
                    <Text text="Recent Activity" style="-fx-font-size: 18; -fx-font-weight: bold;"/>
                    <VBox spacing="10">
                        <HBox style="-fx-padding: 10; -fx-background-color: #f5f5f5; -fx-background-radius: 4;">
                            <Text text="New user registered" style="-fx-fill: #333; -fx-font-weight: bold;"/>
                            <Region HBox.hgrow="ALWAYS"/>
                            <Text text="2 min ago" style="-fx-fill: #9e9e9e;"/>
                        </HBox>
                        <HBox style="-fx-padding: 10; -fx-background-color: #f5f5f5; -fx-background-radius: 4;">
                            <Text text="System update completed" style="-fx-fill: #333; -fx-font-weight: bold;"/>
                            <Region HBox.hgrow="ALWAYS"/>
                            <Text text="1 hour ago" style="-fx-fill: #9e9e9e;"/>
                        </HBox>
                    </VBox>
                </VBox>
            </VBox>
        </HBox>
    </VBox>
    
    <!-- Footer -->
    <HBox style="-fx-background-color: white; -fx-padding: 15 30; -fx-border-color: #e0e0e0; -fx-border-width: 1 0 0 0;" alignment="CENTER_RIGHT">
        <Text text="Â© 2023 LaPlateformeTracker - Admin Dashboard" style="-fx-fill: #9e9e9e; -fx-font-size: 12;"/>
    </HBox>
</VBox>
