<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.shape.Line?>

<VBox alignment="CENTER" spacing="20" style="-fx-padding: 40; -fx-background-color: #f5f5f5;" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.tracky.controller.LoginController">
    <VBox alignment="CENTER" spacing="20" style="-fx-background-color: white; -fx-padding: 30; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 5);">
        <Text text="Welcome Back" style="-fx-font-size: 24; -fx-font-weight: bold;"/>
        
        <VBox spacing="15" style="-fx-min-width: 300;">
            <!-- Username/Email Field -->
            <VBox spacing="5">
                <Label text="Username or Email" style="-fx-font-weight: bold;"/>
                <TextField fx:id="usernameField" promptText="Enter username or email" style="-fx-pref-height: 35;"/>
            </VBox>
            
            <!-- Password Field -->
            <VBox spacing="5">
                <HBox spacing="5">
                    <Label text="Password" style="-fx-font-weight: bold;"/>
                    <Label text="Forgot?" style="-fx-text-fill: #2196F3; -fx-cursor: hand;"/>
                </HBox>
                <PasswordField fx:id="passwordField" promptText="Enter password" style="-fx-pref-height: 35;"/>
            </VBox>
            
            <!-- Error Message -->
            <Label fx:id="errorLabel" style="-fx-padding: 5 0;" wrapText="true" visible="false"/>
            
            <!-- Login Button -->
            <Button fx:id="loginButton" text="Sign In" onAction="#handleLogin" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-pref-height: 40; -fx-font-weight: bold;" defaultButton="true"/>
            
            <!-- Divider -->
            <HBox alignment="CENTER" spacing="10">
                <Line endX="100" style="-fx-stroke: #e0e0e0;"/>
                <Text text="OR" style="-fx-fill: #9e9e9e;"/>
                <Line endX="100" style="-fx-stroke: #e0e0e0;"/>
            </HBox>
            
            <!-- Register Button -->
            <Button fx:id="registerButton" text="Create Account" onAction="#handleRegister" style="-fx-background-color: transparent; -fx-text-fill: #2196F3; -fx-border-color: #2196F3; -fx-border-radius: 4; -fx-pref-height: 40;" />
        </VBox>
    </VBox>
    
    <!-- Footer -->
    <HBox alignment="CENTER" spacing="10" style="-fx-padding: 20 0 0 0;">
        <Text text="Â© 2025 Tracky By LaPlateforme" style="-fx-fill: #9e9e9e;"/>
    </HBox>
</VBox>
