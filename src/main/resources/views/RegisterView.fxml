<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" spacing="20" styleClass="container" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.tracky.controller.RegisterController">
    <VBox styleClass="form-container" spacing="15">
        <Label styleClass="form-title" text="Create Admin Account" />
        
        <Label styleClass="form-label" text="Username" />
        <TextField fx:id="usernameField" promptText="Choose a username" />
        
        <Label styleClass="form-label" text="Email" />
        <TextField fx:id="emailField" promptText="Enter your email" />
        
        <Label styleClass="form-label" text="Password" />
        <PasswordField fx:id="passwordField" promptText="Choose a password" />
        
        <Label styleClass="form-label" text="Confirm Password" />
        <PasswordField fx:id="confirmPasswordField" promptText="Confirm your password" />
        
        <Label fx:id="errorLabel" styleClass="error-message" visible="false" wrapText="true" />
        
        <Button styleClass="button button-primary" mnemonicParsing="false" onAction="#handleRegister" text="Create Account" defaultButton="true" />
        
        <HBox alignment="CENTER" spacing="5">
            <Label text="Already have an account?" />
            <Hyperlink onAction="#switchToLogin" text="Sign in here" />
        </HBox>
    </VBox>
</VBox>
