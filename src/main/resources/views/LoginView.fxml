<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" spacing="20" styleClass="container" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.tracky.controller.LoginController">
    <VBox styleClass="form-container" spacing="20">
        <Label styleClass="form-title" text="Admin Login" />
        
        <Label styleClass="form-label" text="Username or Email" />
        <TextField fx:id="usernameField" promptText="Enter your username or email" />
        
        <Label styleClass="form-label" text="Password" />
        <PasswordField fx:id="passwordField" promptText="Enter your password" />
        
        <Label fx:id="errorLabel" styleClass="error-message" visible="false" wrapText="true" />
        
        <Button styleClass="button button-primary" mnemonicParsing="false" onAction="#handleLogin" text="Sign In" defaultButton="true" />
        
        <HBox alignment="CENTER" spacing="5">
            <Label text="Don't have an account?" />
            <Hyperlink onAction="#switchToRegister" text="Register here" />
        </HBox>
    </VBox>
</VBox>
